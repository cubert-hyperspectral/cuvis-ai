# gRPC Server Configuration
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# TLS/SSL Configuration (optional)
# Set GRPC_USE_TLS=true to enable TLS
GRPC_USE_TLS=false
GRPC_TLS_CERT_PATH=/path/to/cert.pem
GRPC_TLS_KEY_PATH=/path/to/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Data Configuration
# Default data directory for cu3s files
DATA_DIR=./data

# HuggingFace API Configuration
# HuggingFace API Token (optional, for private models/spaces)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Pipeline Configuration
# Root directory for all configs (pipeline configs are in CUVIS_CONFIGS_DIR/pipeline)
CUVIS_CONFIGS_DIR=./configs
